@model IEnumerable<SinExWebApp20328800.Models.ServiceType>

@{
    ViewBag.Title = "Service Types";
}

<h2>Service Types</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CutoffTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CutoffTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryTime)
        </td>
        @if (User.IsInRole("Employee"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ServiceTypeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ServiceTypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ServiceTypeID })
            </td>
        }

    </tr>
}

</table>

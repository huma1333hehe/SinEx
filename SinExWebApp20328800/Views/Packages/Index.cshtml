@model IEnumerable<SinExWebApp20328800.Models.Package>

@{
    ViewBag.Title = "Index";
}

<h2>Packages for shipment (Waybill ID: @ViewBag.Waybillid.ToString("0000000000000000"))</h2>

<p>
    @Html.ActionLink("Add one more package for this shipment", "Create", new { WaybillId = ViewBag.Waybillid })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Currency.CurrencyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageType.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageTypeSize.TypeSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeclaredWeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActualWeight)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.CurrencyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageTypeSize.TypeSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeclaredWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualWeight)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PackageID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PackageID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PackageID })
            </td>
            <td></td>

        </tr>
    }

</table>
